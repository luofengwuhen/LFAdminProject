    @foreach (var subject in ViewBag.Survey.subjectList)
    {
        if (subject.Subject_Type == "单选题")
        {
            <div class="layui-col-md12">
                <div class="layui-card">
                    <div class="layui-card-body"> @subject.Subject_Num . @subject.Subject_Name</div> 
                        <div class="layui-card-body">
                            @foreach (var option in subject.optionList)
                            {
                                <input type="radio" name="inlineRadioOptions$@subject.Subject_ID"  lay-verify="required"  value="@option.Option_Name" title="@option.Option_Name" />
                            }
                        </div> 
                </div>
            </div>
        }
        else if (subject.Subject_Type == "量表题")
        {

        }
        else if (subject.Subject_Type == "多选题")
        {

        }

        else if (subject.Subject_Type == "问答题")
        {
            <div class="layui-col-md12">
                <div class="layui-card">
                    <div class="layui-card-body"> @subject.Subject_Num . @subject.Subject_Name</div>
                    <div class="layui-card-body">
                        <textarea class="layui-textarea " name="content" lay-verify="content" id="LAY_demo_editor"></textarea>
                    </div>
                </div>
                </div>
         }

    }
</form>

 

