        });

        
        $('#add').on('click', function () { 
            layer.open({
                    type: 2,
                    title: "新增选项信息",
                    skin: 'layui-layer-rim', //加上边框
                    area: ['450px', '450px'], //宽高
                content: '/Option/Add'
                  
                });
        });
         

    });

</script>