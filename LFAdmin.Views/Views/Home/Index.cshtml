<link href="../../static/admin/css/admin.css" rel="stylesheet" />
<link href="../../static/admin/layui/css/layui.css" rel="stylesheet" />
<div class="main-layout" id='main-layout'>
    <!--侧边栏-->
    <div class="main-layout-side">
        <div class="m-logo">
        </div>
        <ul class="layui-nav layui-nav-tree" lay-filter="leftNav">
            @if (ViewBag.RuleList != null)
            {  
                if (ViewBag.RuleList.Contains("04"))
                {
                    <li class="layui-nav-item layui-nav-itemed">
                        <a href="javascript:;"><i class="iconfont">&#xe60b;</i>系统管理</a>
                        <dl class="layui-nav-child">
                            @if (ViewBag.RuleList.Contains("0401"))
                            {
                                <dd>
                                    <a href="javascript:;" data-url="/User/List" data-id='0401' data-text="用户信息"><span class="l-line"></span>用户信息</a>
                                </dd>

                            }
                            @if (ViewBag.RuleList.Contains("0403"))
                            {
                                <dd>
                                    <a href="javascript:;" data-url="/Role/List" data-id='0403' data-text="角色信息"><span class="l-line"></span>角色信息</a>
                                </dd>

                            }
                            @if (ViewBag.RuleList.Contains("0402"))
                            {
                                <dd>
                                    <a href="javascript:;" data-url="/Basic/List" data-id='0402' data-text="基础数据"><span class="l-line"></span>基础数据</a>
                                </dd>
                            }
                        </dl>
                    </li>
                }

            
                if (ViewBag.RuleList.Contains("07"))
                {
                    <li class="layui-nav-item layui-nav-itemed">
                        <a href="javascript:;"><i class="iconfont">&#xe602;</i>测试</a>
                        <dl class="layui-nav-child">
                            @if (ViewBag.RuleList.Contains("0701"))
                            {
                                <dd>
                                    <a href="javascript:;" data-url="/LayuiTest/List" data-id='0701' data-text="测试"><span class="l-line"></span>测试</a>
                                </dd>

                            }

                        </dl>
                    </li>
                }
            }
 
        </ul>
    </div>
    <!--右侧内容-->
    <div class="main-layout-container">
        <!--头部-->
        <div class="main-layout-header">
            <div class="menu-btn" id="hideBtn">
                <a href="javascript:;">
                    <span class="iconfont">&#xe60e;</span>
                </a>
            </div>
            <ul class="layui-nav" lay-filter="rightNav">
                <!--  <li class="layui-nav-item"><a href="javascript:;" data-url="email.html" data-id='4' data-text="邮件系统"><i class="iconfont">&#xe603;</i></a></li>-->
                <li class="layui-nav-item">
                    <a href="javascript:;" data-url="/User/Edit" data-id='5' data-text="个人信息"><i class="fa fa-user-o fa-lg"></i> @ViewBag.EmployeeName</a>
                </li>
                <li class="layui-nav-item"><a href="javascript:;" onclick="disLogin()"><i class="fa fa-sign-out fa-lg"></i> 退出</a></li>
            </ul>
        </div>
        <!--主体内容-->
        <div class="main-layout-body">
            <!--tab 切换-->
            <div class="layui-tab layui-tab-brief main-layout-tab" lay-filter="tab" lay-allowClose="true">
                <ul class="layui-tab-title">
                    <li class="layui-this welcome"></li>
                </ul>
                <div class="layui-tab-content">
                    <div class="layui-tab-item layui-show" style="background: #f5f5f5;">
                        <!--1-->
                        <!--  <iframe src="welcome" width="100%" height="100%" name="iframe" scrolling="auto" class="iframe" framborder="0"></iframe>-->
                        <!--1end-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--遮罩-->
    <div class="main-mask">

    </div>
</div>
<script src="../../static/admin/layui/layui.js"></script>
<script src="../../static/admin/js/common.js" type="text/javascript" charset="utf-8"></script>
<script src="../../static/admin/js/main.js" type="text/javascript" charset="utf-8"></script>
<script type="text/javascript">
    var scope = {
        link: 'welcome'
    }

    function disLogin() {
        location.href = "/Home/Login";
    }

</script>


